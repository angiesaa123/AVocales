<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17202A"
    tools:context=".inicio"
    android:orientation="vertical">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="NestedScrolling">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@android:color/holo_green_dark"
            android:gravity="center"
            android:text="APRENDAMOS LAS VOCALES"
            android:textSize="28sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="21dp"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/btn_Aa"
            android:layout_width="305dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:onClick="a"
            android:src="@mipmap/letra_a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:ignore="ContentDescription" />


        <ImageButton
            android:id="@+id/btn_Ee"
            android:layout_width="305dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@mipmap/letra_e"
            android:onClick="e"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_Aa"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btn_Ii"
            android:layout_width="305dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:onClick="i"
            android:src="@mipmap/letra_i"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_Ee"
            tools:ignore="ContentDescription" />


        <ImageButton
            android:id="@+id/btn_Oo"
            android:layout_width="305dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:onClick="o"
            android:src="@mipmap/letra_o"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_Ii"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btn_Uu"
            android:layout_width="305dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:onClick="u"
            android:src="@mipmap/letra_u"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_Oo"
            tools:ignore="ContentDescription" />
    </LinearLayout>

</ScrollView>

</ScrollView>